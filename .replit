mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python init_db.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python init_test_data.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
